<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaGruppo.GruppoActivity">

    <!-- RecyclerView per visualizzare i gruppi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGruppi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonAggiungiGruppo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pulsante per aggiungere un nuovo gruppo -->
    <Button
        android:id="@+id/buttonAggiungiGruppo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi Gruppo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewGruppi" />

</androidx.constraintlayout.widget.ConstraintLayout>
