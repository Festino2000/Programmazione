<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".areaGruppo.SpeseCondiviseFragment">

    <!-- Toolbar -->

    <!-- Toggle group: Tutti / Non pagati -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCondivisi"
        android:layout_width="414dp"
        android:layout_height="78dp"
        android:background="@color/purple_500"
        android:title="Condivisi"
        android:titleTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:titleCentered="true" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupFiltri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarCondivisi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTutti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutti" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNonPagati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non pagati" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Totale spese -->
    <TextView
        android:id="@+id/textTotale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Totale: +30€, -20€"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toggleGroupFiltri"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView con lista spese condivise -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCondivisi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textTotale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
